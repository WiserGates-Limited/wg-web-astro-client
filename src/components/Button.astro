---
const { type, text, className, id, reverse } = Astro.props;
---

<button id={id} type={type} class:list={[className, reverse]}>
  {text}
</button>

<style lang="scss">
  button {
    width: fit-content;
    font-family: "Futura medium";
    font-size: 15px;
    font-weight: normal;
    background-color: var(--accent);
    color: black;
    border: none;
    border-radius: 5px;
    padding: 18px 26px;
    transition: all 0.2s ease-in-out;
  }

  .reverse {
    color: var(--accent);
    background: black;
  }

  .reverse:hover {
    color: black;
    background: #ffaf11;
  }

  button:hover {
    background-color: black;
    /* font-size: 30px; */
    color: var(--accent);
    /* padding      : 19px 27px; */
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }
</style>

<script is:inline>
const closeButton = document.querySelector("#close-button");

// closeButton.style.backgroundColor = "white";
closeButton.style.position = "absolute";
closeButton.style.right = "28px";
closeButton.style.top = "28px";
closeButton.style.padding = "10px";
closeButton.style.borderRadius = "2px";
</script>
